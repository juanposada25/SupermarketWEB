@page
@model SupermarketWEB.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}
<h1 class="text-center my-4 text-danger">Delete Category</h1>

<h3 class="text-center text-muted">Are you sure you want to delete this category?</h3>
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card border-danger mb-4">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Description)</dd>
                </dl>
            </div>
        </div>

        <div class="text-center">
            <form method="post">
                <input type="hidden" asp-for="Category.Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                <a asp-page="./Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #ffe6e6;
    }
    h1, h3 {
        color: #b22222;
    }
</style>

