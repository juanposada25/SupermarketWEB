@page
@model SupermarketWEB.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}
<h1 class="text-center my-4">Edit Category</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Category.Id" />

            <div class="form-group mb-3">
                <label asp-for="Category.Name" class="form-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Category.Description" class="form-label"></label>
                <textarea asp-for="Category.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Save" class="btn btn-success btn-lg" />
                <a asp-page="./Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f0f8ff;
    }
    h1 {
        color: #333333;
    }
    .form-label {
        font-weight: bold;
    }
</style>

