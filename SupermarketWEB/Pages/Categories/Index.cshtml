@page
@model SupermarketWEB.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Index Categories";
}
<h1 class="text-center my-4">Index Categories</h1>

<p class="text-center">
    <a asp-page="Create" class="btn btn-success btn-lg mb-3">Create New Category</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th class="text-center">@Html.DisplayNameFor(model => model.Categories[0].Name)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Categories[0].Description)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td class="text-center align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center align-middle">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-center align-middle">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning mx-1">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #f0f8ff;
    }
    h1 {
        color: #333333;
    }
    .table thead th {
        color: #ffffff;
    }
    .table tbody tr:hover {
        background-color: #e0f7fa;
    }
    .btn {
        font-weight: bold;
    }
</style>



