@page
@model SupermarketWEB.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}
<h1 class="text-center my-4">Delete Customer</h1>

<div class="text-center">
    <h3 class="text-danger">Are you sure you want to delete this customer?</h3>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="border p-4 bg-light shadow-sm rounded">
            <h4>Customer Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Customer.Document)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Document)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Customer.First_Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.First_Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Customer.Last_Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Last_Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Customer.Address)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Address)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Customer.Birthday)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Birthday)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Customer.Phone)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Phone)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Customer.Email)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Email)</dd>
            </dl>
        </div>

        <div class="text-center mt-4">
            <form method="post" class="d-inline">
                <input type="hidden" asp-for="Customer.Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg me-2" />
            </form>
            <a asp-page="./Index" class="btn btn-primary btn-lg">Back to List</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff;
    }
    h1 {
        color: #333333;
    }
    .btn {
        font-weight: bold;
    }
</style>



