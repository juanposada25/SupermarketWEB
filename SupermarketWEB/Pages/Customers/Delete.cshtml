@page
@model SupermarketWEB.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}
<h1 class="text-center text-danger mb-4">Delete Customer</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger mb-4">
                <div class="card-body">
                    <h5 class="card-title text-center text-danger">Are you sure you want to delete this customer?</h5>
                    <dl class="row mt-4">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Customer.Document)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Document)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Customer.First_Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.First_Name)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Customer.Last_Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Last_Name)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Customer.Address)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Address)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Customer.Birthday)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Birthday)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Customer.Phone)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Phone)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Customer.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Email)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center">
                <form method="post" class="d-inline">
                    <input type="hidden" asp-for="Customer.Id" />
                    <button type="submit" class="btn btn-danger px-4">Confirm Delete</button>
                </form>
                <a asp-page="./Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
            </div>
        </div>
    </div>
</div>


