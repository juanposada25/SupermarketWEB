@page
@model SupermarketWEB.Pages.Customers.EditModel
@{
    ViewData["Title"] = "Edit Customer";
}
<h1 class="text-center my-4">Edit Customer</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" class="border p-4 bg-light shadow-sm rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Customer.Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Customer.Document" class="control-label"></label>
                        <input asp-for="Customer.Document" class="form-control" />
                        <span asp-validation-for="Customer.Document" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Customer.First_Name" class="control-label"></label>
                        <input asp-for="Customer.First_Name" class="form-control" />
                        <span asp-validation-for="Customer.First_Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Customer.Last_Name" class="control-label"></label>
                        <input asp-for="Customer.Last_Name" class="form-control" />
                        <span asp-validation-for="Customer.Last_Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Customer.Address" class="control-label"></label>
                        <input asp-for="Customer.Address" class="form-control" />
                        <span asp-validation-for="Customer.Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Customer.Birthday" class="control-label"></label>
                        <input asp-for="Customer.Birthday" type="date" class="form-control" />
                        <span asp-validation-for="Customer.Birthday" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Customer.Phone" class="control-label"></label>
                        <input asp-for="Customer.Phone" class="form-control" />
                        <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Customer.Email" class="control-label"></label>
                        <input asp-for="Customer.Email" type="email" class="form-control" />
                        <span asp-validation-for="Customer.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Save" class="btn btn-success btn-lg me-2" />
                <a asp-page="./Index" class="btn btn-primary btn-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff;
    }
    h1 {
        color: #333333;
    }
    .btn {
        font-weight: bold;
    }
</style>




