@page
@model SupermarketWEB.Pages.PayModes.EditModel
@{
    ViewData["Title"] = "Edit PayMode";
}
<h1 class="text-center my-4">Edit PayMode</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" class="border p-4 bg-light shadow-sm rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="PayMode.Id" />

            <div class="form-group">
                <label asp-for="PayMode.Name" class="control-label"></label>
                <input asp-for="PayMode.Name" class="form-control" />
                <span asp-validation-for="PayMode.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PayMode.Observation" class="control-label"></label>
                <input asp-for="PayMode.Observation" class="form-control" />
                <span asp-validation-for="PayMode.Observation" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Save" class="btn btn-success btn-lg me-2" />
                <a asp-page="./Index" class="btn btn-primary btn-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff;
    }
    h1 {
        color: #333333;
    }
    .btn {
        font-weight: bold;
    }
</style>


