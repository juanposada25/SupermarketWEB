@page
@model SupermarketWEB.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete";
}
<h1 class="text-center my-4">Delete Product</h1>

<div class="text-center">
    <h3 class="text-danger">Are you sure you want to delete this product?</h3>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="border p-4 bg-light shadow-sm rounded">
            <h4>Product Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Product.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Product.Price)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Price)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Product.Stock)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Stock)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Product.Category.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Category.Name)</dd>
            </dl>
        </div>

        <div class="text-center mt-4">
            <form method="post" class="d-inline">
                <input type="hidden" asp-for="Product.Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg me-2" />
            </form>
            <a asp-page="./Index" class="btn btn-primary btn-lg">Back to List</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff;
    }
    h1 {
        color: #333333;
    }
    .btn {
        font-weight: bold;
    }
</style>

